def bellFord(start):
    dist = {node: float("inf") for node in graph.nodes()}
    dist[start] = 0
    
    for i in range(len(graph.nodes()) - 1):
        for edge in graph.edges():
            if edge.weight() + dist[edge.source()] < dist[edge.target()]:
                dist[edge.target()] = edge.weight() + dist[edge.source()]
    return dist

