def bubbleSort(myList):
    for i in range(len(myList)):
        for j in range(len(myList) -i -1):
            if myList[j] > myList[j+1]:
                temp = myList[j]
                myList[j] = myList[j+1]
                myList[j+1] = temp
    return myList

test = [1,4,2,9,22,9,4,3,7,10]

print(bubbleSort(test))

