def max_sum(testList,k):
    sum = 0
    max = 0
    for i in range(len(testList)-k+1):
        
        for j in range(k):
            sum += testList[j+i]
        #print(sum)
        if sum > max:
            max = sum
            sum = 0
        else:
            sum = 0
    return max
print(max_sum([-3, 4, 5, -3, 6, -2, 5], 3))
print(max_sum([9, -3, 5, 8, 3, -2, 4], 2))

